Algoritmo Pentagono
	Definir lado, apotema, perimetro, area como real;
	Escribir "Programa para calcular área y perímetro de un pentágono";
	Escribir "Dame el lado";
	Leer lado;
	Escribir "Dame la apotema";
	Leer apotema;
	perimetro<-lado*5;
	area<-(perimetro*apotema)/2;
	Escribir "Perimetro: ", perimetro, " area: ", area;
FinAlgoritmo
